<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.marcin.tester_app.MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/fajne_tlo"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/tester_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tester_app"
        android:layout_margin="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/system_test"
        android:text="@string/system_test"
        android:layout_margin="10dp"/>


</LinearLayout>
